<div class="auth-container">
    <div class="auth-content">
        <h2 class="auth-content-title">Register</h2>
        <% if(locals.userRegisterError != null) { %> 
            <span class="auth-content-error-message"><%= userRegisterError %> </span>
        <% } %>
        <form class="auth-content-form" action="/auth/register" method="POST">
            <label class="authForm-field">
                <input type="text" class="auth-input" id="username" name="username" required>
                <span class="auth-placeholder">Enter Username</span>
            </label>
            <label class="authForm-field">
                <input type="email" class="auth-input" id="email" name="email" required>
                <span class="auth-placeholder">Enter Email</span>
            </label>
            <label class="authForm-field">
                <input type="password" class="auth-input" id="password" name="password" required>
                <span class="auth-placeholder">Enter Password</span>
            </label>
            <button class="button" type="submit"></button>
        </form>
        <a class="auth-content-link-button" href="/auth/login">Log In</a>
    </div>
</div>